{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": ["airbnb-base"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off",
    "no-underscore-dangle": "off",
    "no-fallthrough": "off",
    "no-useless-escape": "off",
    "consistent-return": "off",
    "no-param-reassign": "off",
    "import/no-extraneous-dependencies": "off"
  },
  "overrides": [
    {
      "files": ["*.test.js"],
      "env": {
        "mocha": true
      },
      "rules": {
        "func-names": "off",
        "no-return-assign": "off"
      }
    }
  ]
}
